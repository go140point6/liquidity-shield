########################################
# Core Bot Configuration
########################################

# Discord bot token (REQUIRED)
# From: Discord Developer Portal → Bot → Token
BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Discord guild (server) ID
# Enable Developer Mode in Discord → right-click server → Copy ID
GUILD_ID=YOUR_DISCORD_GUILD_ID_HERE

# Required: SQLite DB path and file
DB_PATH=./data/liquidity-shield.sqlite ## prod
# DB_PATH=./data/liquidity-shield-dev.sqlite ## dev


########################################
# Roles
########################################

# Verified role ID (Minion)
ROLE_VERIFIED_ID=YOUR_VERIFIED_ROLE_ID_HERE

# Jail role ID (Penitent)
ROLE_JAIL_ID=YOUR_JAIL_ROLE_ID_HERE

# Initiate role ID (assigned on join)
ROLE_INITIATE_ID=YOUR_INITIATE_ROLE_ID_HERE

# Automata role ID (assigned to bots on join)
ROLE_AUTOMATA_ID=YOUR_AUTOMATA_ROLE_ID_HERE

# Protected roles (comma-separated) for protection coverage audits + alerts
PROTECTED_ROLE_IDS=YOUR_PROTECTED_ROLE_IDS_HERE


########################################
# Channels / Posts
########################################

# Admin log channel ID
ADMIN_LOG_CHANNEL_ID=YOUR_ADMIN_LOG_CHANNEL_ID_HERE

# Rules channel ID (where Shield posts the rules)
RULES_CHANNEL_ID=YOUR_RULES_CHANNEL_ID_HERE

# Emoji required to accept rules
RULES_EMOJI=✅

# FAQ channel ID (where Shield posts the FAQ)
FAQ_CHANNEL_ID=YOUR_FAQ_CHANNEL_ID_HERE

# Quick-start channel ID (where Shield posts the quick-start)
QUICKSTART_CHANNEL_ID=YOUR_QUICKSTART_CHANNEL_ID_HERE

# Welcome channel ID (where Shield posts greetings)
WELCOME_CHANNEL_ID=YOUR_WELCOME_CHANNEL_ID_HERE


########################################
# Verification Gate
########################################

# Verification deadline (minutes)
# 1 for testing, 10 for production
VERIFY_TIMEOUT_MIN=10

# Poll interval (seconds) for deadline checks
POLL_INTERVAL_SEC=20


########################################
# Moderation Logging (Exclusions)
########################################

# Optional: Comma-separated channel IDs to exclude from admin logging
#EXCLUDED_CHANNEL_IDS=YOUR_OPTIONAL_EXCLUDED_CHANNEL_IDS_HERE

# Optional: Comma-separated category IDs to exclude from admin logging
#EXCLUDED_CATEGORY_IDS=YOUR_OPTIONAL_EXCLUDED_CATEGORY_IDS_HERE


########################################
# Message Cache
########################################

# Message cache size (max entries) and TTL in hours
MESSAGE_CACHE_MAX=5000
MESSAGE_CACHE_TTL_HOURS=24

# Persist message cache to DB (survives restarts)
MESSAGE_CACHE_DB_ENABLED=false
MESSAGE_CACHE_DB_TTL_HOURS=24


########################################
# Logging
########################################

# Logging verbosity:
# 0 = errors only
# 1 = warnings + errors
# 2 = info + warnings + errors
# 3 = debug + info + warnings + errors
DEBUG=1
# Disable colors (CI, log files)
# NO_COLOR=1
# Force colors (Docker / piped output)
# FORCE_COLOR=1
